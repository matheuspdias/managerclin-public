FROM node:20-alpine

# Install pnpm using corepack
RUN corepack enable && corepack prepare pnpm@latest --activate

WORKDIR /var/www/html

# Copy package files first
COPY package*.json ./
COPY pnpm-lock.yaml* ./

# Install dependencies
RUN pnpm install

# Copy source code
COPY . .

# Expose port
EXPOSE 5173

# Start development server
CMD ["pnpm", "run", "dev"]
