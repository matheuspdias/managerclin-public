APP_NAME=ManagerClin
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR
APP_TIMEZONE=America/Sao_Paulo

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Banco de Dados
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=clinica
DB_USERNAME=root
DB_PASSWORD=root

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
DB_QUEUE_CONNECTION=mysql
DB_QUEUE_TABLE=jobs
DB_QUEUE=default
DB_QUEUE_RETRY_AFTER=90
CACHE_STORE=database

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Email - Mailgun
MAIL_MAILER=mailgun
MAILGUN_DOMAIN=your-domain.com
MAILGUN_SECRET=your-mailgun-api-key
MAILGUN_ENDPOINT=api.mailgun.net
MAIL_FROM_ADDRESS=no-reply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 (Opcional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite
VITE_APP_NAME="${APP_NAME}"
VITE_DEV_SERVER_URL=http://localhost:5173

# IA - OpenAI e DeepSeek
OPENAI_API_KEY=your-openai-api-key
DEEPSEEK_API_KEY=your-deepseek-api-key

TZ=America/Sao_Paulo
LOGGER_LEVEL=info

# WhatsApp Evolution API
# Documentação: https://doc.evolution-api.com/
WHATSAPP_API_URL=http://localhost:8081
# Para Docker: use http://host.docker.internal:8081
WHATSAPP_API_TOKEN=your-evolution-api-token
WHATSAPP_INSTANCE_ID=your-instance-name
EVOLUTION_API_KEY=your-evolution-api-key

# Stripe Payment Gateway
# IMPORTANTE: Use apenas chaves de TESTE para desenvolvimento
# Obtenha suas chaves em: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_test_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_test_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
VITE_STRIPE_KEY=pk_test_your_test_publishable_key_here

# Stripe Price IDs
# Crie seus produtos e preços no Stripe Dashboard
# Documentação: https://stripe.com/docs/billing/prices-guide
STRIPE_PLAN_ESSENCIAL=price_your_essencial_plan_id
STRIPE_PLAN_PRO=price_your_pro_plan_id
STRIPE_PLAN_PREMIUM=price_your_premium_plan_id
STRIPE_PRICE_ADDITIONAL_USERS=price_your_additional_users_id
STRIPE_AI_CREDITS_BASIC=price_your_ai_credits_basic_id
STRIPE_AI_CREDITS_PROFESSIONAL=price_your_ai_credits_pro_id
STRIPE_AI_CREDITS_ENTERPRISE=price_your_ai_credits_enterprise_id

# Laravel Cashier
CASHIER_CURRENCY=BRL
CASHIER_MODEL=App\Models\Company

# Docker Hub (Opcional - para deploy)
DOCKERHUB_USERNAME=your-dockerhub-username

# Telemedicina - Jitsi/JaaS (8x8 Video)
# Documentação: https://jaas.8x8.vc/
# Para usar Jitsi self-hosted, mude TELEMEDICINE_PROVIDER para 'jitsi'
# e TELEMEDICINE_SERVER_URL para sua instância
TELEMEDICINE_PROVIDER=jaas
TELEMEDICINE_SERVER_URL=https://8x8.vc
TELEMEDICINE_APP_ID=your-jaas-app-id
